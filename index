import geopandas as gpd
import folium

# Učitajte shapefile sa temperaturnim stanicama
gdf = gpd.read_file('F:/Klimatski atlas BiH/Temperaturne stanice/Temperaturne stanice.shp')

# Kreirajte kartu
m = folium.Map(location=[44, 18], zoom_start=7)

# Dodajte GeoJson podatke na mapu
folium.GeoJson(gdf).add_to(m)

# Kreirajte funkciju za prikaz atributa na karti
def highlight(feature):
    return {
        'weight': 3,
        'color': 'red'
    }

# Dodajte interaktivnost za prikazivanje atributa na karti
folium.features.GeoJson(gdf,
                         highlight_function=highlight,
                         tooltip=folium.features.GeoJsonTooltip(fields=['F1'], labels=True)).add_to(m)

# spremite mapu u HTML datoteku
m.save('map1.html')

# Prikažite mapu
m
